{
  "name": "root",
  "private": true,
  "scripts": {
    "audit": "yarn npm audit -A -R --environment production --severity moderate",
    "update": "yarn upgrade-interactive",
    "kit:build": "yarn workspace @library/kit run build",
    "kit:publish": "yarn workspace @library/kit run publish",
    "storybook:start": "yarn workspace @client/storybook run start",
    "storybook:build": "yarn workspaces foreach --all --exclude @client/storybook run build && yarn workspace @client/storybook run build"
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@types/node": "25.2.1",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-storybook": "10.2.7",
    "postcss": "8.5.6",
    "postcss-scss": "4.0.9",
    "prettier": "3.8.1",
    "storybook": "10.2.7",
    "stylelint": "17.1.1",
    "stylelint-config-standard-scss": "17.0.0",
    "stylelint-prettier": "5.0.3",
    "stylelint-scss": "7.0.0",
    "typescript": "5.9.3"
  },
  "workspaces": [
    "clients/*",
    "library/*"
  ],
  "engines": {
    "node": ">=22"
  },
  "packageManager": "yarn@4.10.3"
}
